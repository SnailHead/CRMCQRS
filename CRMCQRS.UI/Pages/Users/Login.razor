@page "/users/login"
@using Microsoft.AspNetCore.Components
@attribute [AllowAnonymous]


<PageTitle>Пользователи</PageTitle>


<MudGrid Class="d-flex flex-column align-items-center">
    <MudItem sm="12" md="6" xs="12" >
        <MudPaper Class="ma-16 pa-4">
            <MudForm Model="@Model" @ref="@Form" Validation="@(LoginModelValidator.ValidateValue)" ValidationDelay="0">
                <MudGrid>
                    <MudItem xs="12" sm="12" md="12">
                        <MudTextField @bind-Value="Model.Login" For="@(() => Model.Login)" Immediate="true"/>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="12">
                        <MudTextField @bind-Value="Model.Password" For="@(() => Model.Password)" Immediate="true"/>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="12" Class="d-flex justify-center flex-grow-1 gap-4">
                        <MudButton Class="ml-auto" Color="Color.Primary" OnClick="@(async () => await Submit())" Variant="Variant.Filled">Войти</MudButton>
                    </MudItem>

                </MudGrid>
            </MudForm>
        </MudPaper>
    </MudItem>
</MudGrid>